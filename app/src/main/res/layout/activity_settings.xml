<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83AAE5"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSettingsHeader"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:cardBackgroundColor="#83AAE5">

        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:text="SETTINGS"
            android:textColor="#000000"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMeasurementSystem"
        android:layout_width="378dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#B8B8B8">

        <TextView
            android:id="@+id/tvMeasurement"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:text="System"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <RadioGroup
            android:id="@+id/rgMeasurement"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <RadioButton
                android:id="@+id/rbtnMetric"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Metric"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbtnImperial"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Imperial"
                android:textSize="18sp" />
        </RadioGroup>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="#B8B8B8"
        android:text="SAVE"
        android:textColor="#000000"
        android:textSize="24sp" />

</LinearLayout>