<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83AAE5"
    android:orientation="vertical"
    tools:context=".GoalsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPersonalInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:cardBackgroundColor="#83AAE5">

        <TextView
            android:id="@+id/tvGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:text="GOALS"
            android:textColor="#000000"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCalories"
                android:layout_width="378dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Calories"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etCaloriesGoal"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:ems="10"
                    android:inputType="number" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWeight"
                android:layout_width="378dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Weight"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etWeightGoal"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSteps"
                android:layout_width="378dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvSteps"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Steps"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etStepsGoal"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:ems="10"
                    android:inputType="number" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSaveGoals"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:background="#B8B8B8"
                android:text="SAVE"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>