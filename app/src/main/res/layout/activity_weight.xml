<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83AAE5"
    android:orientation="vertical"
    tools:context=".WeightActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWeightHeader"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:cardBackgroundColor="#83AAE5">

        <TextView
            android:id="@+id/tvWeightHeader"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:text="WEIGHT"
            android:textColor="#000000"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/svWeightInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWeightProgress"
                android:layout_width="378dp"
                android:layout_height="164dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

            <TextView
                android:id="@+id/tvWeightProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mandali"
                android:gravity="center"
                android:text="Weight Progress"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvStartingWeightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mandali"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCurrentWeightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/mandali"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />

            <TextView
                android:id="@+id/tvWeightGoalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/mandali"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/pbWeightProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp"
                android:scaleY="3" />

            <TextView
                android:id="@+id/tvWeightDeficitValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/mandali"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvUpdateWeight"
                android:layout_width="378dp"
                android:layout_height="164dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvUpdateWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Update Weight"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etUpdateWeight"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:ems="10"
                    android:fontFamily="@font/mandali"
                    android:hint="New weight"
                    android:inputType="numberDecimal"
                    android:textColor="#000000" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnUpdateWeight"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:background="#B8B8B8"
            android:text="UPDATE"
            android:textColor="#000000"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvStepsHistory"
            android:layout_width="378dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#B8B8B8">

            <TextView
                android:id="@+id/tvWeightHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mandali"
                android:gravity="center"
                android:text="Weight History"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ListView
                android:id="@+id/lvWeightHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp" />

        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>