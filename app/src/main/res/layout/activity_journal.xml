<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83AAE5"
    android:orientation="vertical"
    tools:context=".JournalActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvActivityHeader"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:cardBackgroundColor="#83AAE5">

        <TextView
            android:id="@+id/tvActivity"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:text="ACTIVITY"
            android:textColor="#000000"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="616dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRecordActivity"
                android:layout_width="378dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvRecordActivity"
                    android:layout_width="187dp"
                    android:layout_height="59dp"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Record Activity"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etActivity"
                    android:layout_width="358dp"
                    android:layout_height="137dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/mandali"
                    android:gravity="start|top"
                    android:hint="Enter your activity here..."
                    android:inputType="textMultiLine"
                    android:isScrollContainer="false"
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSaveActivity"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:background="#B8B8B8"
                android:text="SAVE"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSearchActivity"
                android:layout_width="378dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvSearchActivity"
                    android:layout_width="187dp"
                    android:layout_height="59dp"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Search Activity"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <DatePicker
                    android:id="@+id/dpSearchDate"
                    android:layout_width="260dp"
                    android:layout_height="107dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="55dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:background="#B8B8B8"
                android:text="SEARCH"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSearchResults"
                android:layout_width="378dp"
                android:layout_height="219dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#B8B8B8">

                <TextView
                    android:id="@+id/tvSearchResults"
                    android:layout_width="187dp"
                    android:layout_height="59dp"
                    android:fontFamily="@font/mandali"
                    android:gravity="center"
                    android:text="Search Results"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/mandali"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>